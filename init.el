     (spell-checking :variables spell-checking-enable-by-default nil)
     yaml
     ;; (ruby :variables ruby-version-manager 'rvm)
     python
     lua
     (clojure :variables clojure-enable-fancify-symbols t)
     html
     javascript
     restclient
     emacs-lisp
     dash
